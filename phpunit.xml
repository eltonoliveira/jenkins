<phpunit bootstrap="module/Application/test/Bootstrap.php" backupGlobals="false"
backupStaticAttributes="false" strict="true" verbose="true">
    <testsuites>
        <testsuite name="jenkins">
            <directory>module/Application/test/ApplicationTest</directory>
        </testsuite>
    </testsuites>
    
   	<logging>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
		<log type="coverage-html" target="build/coverage" title="jenkins"/>
		<log type="junit" target="build/logs/junit.xml"/>
	</logging>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">module</directory>
			<exclude>
				<file>autoload.php</file>
			</exclude>
		</whitelist>
	</filter>
</phpunit>